<div>
  <div class="uk-card uk-card-default uk-card-hover uk-padding-small">
    <%= link_to(book_path(b.id)) do %>
      <div class="uk-card-media-top">
        <%= image_tag(b.image) %>
      </div>
      <div class="uk-card-body uk-link-reset fonts">
        <h3 class="uk-card-title"><%= b.lead %></h3>
        <%= link_to user_path(id: b.user_id) do %>
          <p>投稿者：<span style="text-decoration: underline; color: purple;"><%= b.user.nickname %></span></p>
        <% end %>
        <div class="book-timestamp">
          <p><%= l b.created_at %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
