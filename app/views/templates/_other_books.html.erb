


<div class="uk-card uk-card-default uk-card-hover uk-grid-collapse uk-child-width-1-3 uk-margin" uk-grid>
  <%= link_to(book_path(b.id)) do %>
    <div class="uk-card-media-left uk-cover-container">
        <%= image_tag(b.image, size:"120x120") %>
        <%# <canvas width="120" height="120"></canvas> %>
    </div>
    <div class="uk-card-body uk-padding-small uk-height-small uk-width-2-3  uk-link-reset fonts">
      <h3 class="uk-card-title"><%= b.lead %></h3>
      <p>書籍名：<%= b.title.truncate(28) %></p>
      <p>著者名：<%= b.author %></p>
      <%= link_to user_path(id: b.user_id) do %>
        <p>投稿者：<span style="text-decoration: underline; color: purple;"><%= b.user.nickname %></span></p>
      <% end %>
      <div class="book-timestamp">
        <p><%= l b.created_at %></p>
      </div>
    </div>
  <% end %>
</div>