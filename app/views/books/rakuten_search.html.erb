<%= render partial: "header" %>
<div class="search-wrapper">
  <div class="search-container">
    <% @items.first(10).each do |item| %>
        <div class="search-blocks">
          <div class="radio">
            <input type="radio">
          </div>
          <div class="search-image">
            <%= link_to("#{item['largeImageUrl']}") do %>
              <%= image_tag("#{item['largeImageUrl']}", size: "70x90")%>
            <% end %>
          </div>
          <div class="search-contens">
            <p>タイトル: <b><%= "#{item['title'][0, 34]}" %></b></p>
            <p>著者: <b><%= "#{item['author']}" %></b></p>
            <p>出版社: <b><%= "#{item['publisherName']}" %></b> / 発刊日: <b><%= "#{item['salesDate']}" %></b></p>
          </div>
        </div>
      <% end %>
  </div>
</div>