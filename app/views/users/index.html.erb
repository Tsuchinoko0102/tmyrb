<%= render partial: "books/header"%>

<main>
  <div class="main-container">
    <div class="user-contents">
    <% if user_signed_in? %>
      <h2><%= current_user.nickname %></h2>
    <% end %>
      <div class="user-field">
        <%= image_tag("izumin-sample.jpg", size: "150x120")%>
      </div>
      <div class="user-contents">
        <ul>
          <li>フォロー / フォロワー</li>
          <% if user_signed_in?%>
          <li><%= link_to("マイページへ", user_path(current_user.id)) %></li>
          <li><%= link_to("Outputする", new_book_path) %></li>
          <% end%>
        </ul>
      </div>
    </div>
    <div class="main-contents">
    <div class="other-books">
          <% @books.each do |b| %>
            <%= link_to(book_path(b.id)) do %>
              <div class="book-blocks">
                <div class="book-image">
                  <%= image_tag(b.image, size:"70x90") %>
                </div>
                <div class="book-info">
                  <p><%= b.title %></p>
                  <p><%= b.author %></p>
                  <p><%= b.lead %><p>
                </div>
                <div class="other-book-timestamp">
                  <p><%= l b.created_at %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</main> 