<%= render partial: "templates/header"%>

<div class="registrations-wrapper">
  <div class="registrations-container">
    <%= form_with(model: @user, url: user_path(id: @user.id), local: true, class: "uk-form-horizontal uk-position-center") do |f| %>
      <div class="registrations-fields">
        <%# <div class="regist-main"> %>
          <%= render "devise/shared/error_messages", resource: @user %>
            <div class="field">
              <%= f.label :email, class:"uk-form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="field">
              <%= f.label :prefecture_id, class:"uk-form-label" %>
              <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {autofocus: true, autocomplete: "prefecture"}) %>
            </div>

            <div class="field">
              <%= f.label :works, class:"uk-form-label" %>
              <%= f.text_field :works, autofocus: true, autocomplete: "works" %>
            </div>

            <div class="field genre-field" id="genre">
              <%= f.label :genre_id, "ジャンル", class:"uk-form-label" %>
              <%= select_tag("category", options_from_collection_for_select(Category.all, :id, :name)) %>
            </div>

            <div class="field">
              <%= f.label :likes_author, class:"uk-form-label" %>
              <%= f.text_field :likes_author, autofocus: true, autocomplete: "likes_author" %>
            </div>

            <div class="field">
              <%= f.label :likes_book, class:"uk-form-label" %>
              <%= f.text_field :likes_book, autofocus: true, autocomplete: "likes_book" %>
            </div>

          </div>
          <div class="actions">
            <%= f.submit "更新する" %>
            <%= button_to "戻る", :back, method: :get %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


