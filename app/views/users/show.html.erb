<%= render partial: "books/header"%>

<main>
  <div class="main-container">
    <%# メイン左窓、ユーザー関連情報の一覧 %>
    <div class="user-contents">
      <div class="user-info">
        <%= image_tag("izumin-sample.jpg", size: "150x120")%>
        <p><%= current_user.nickname %></p>
      </div>
      <div class="user-menu">
        <ul>
          <li>フォロー / フォロワー</li>
          <li><%= link_to("プロフィール編集する", edit_user_path(current_user.id)) %></li>
          <li><%= link_to("Outputする", new_book_path) %></li>
        </ul>
      </div>
    </div>
    
    <%# メイン中央〜右、投稿情報の一覧 %>
    <div class="main-contents">
      <h2 class="main-contents-header">投稿一覧</h2> 
      <div class="contents">
        <div class="my-books">
          <% @books.each do |b| %>
            <%= link_to(book_path(b.id)) do %>
              <div class="book-blocks">
                <div class="book-image">
                  <%= image_tag(b.image, size:"70x90") %>
                </div>
                <div class="info-box">
                  <div class="book-info">
                    <p><%= b.title %></p>
                    <p><%= b.author %></p>
                    <p><%= b.lead %><p>
                  </div>
                  <div class="my-book-timestamp">
                    <p><%= l b.created_at %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main> 