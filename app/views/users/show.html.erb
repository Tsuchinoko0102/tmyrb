<%= render partial: "templates/header"%>

<main>
  <div class="main-container">
    <%# メイン左窓、ユーザー関連情報の一覧 %>
    <%= render partial: "templates/user_contents"%>
    <%# メイン中央〜右、投稿情報の一覧 %>

    <div class="main-contents">
      <h2 class="main-contents-header">投稿一覧</h2> 
      <div class="contents">
        <div class="books">
          <% @books.each do |b| %>
            <%= link_to(book_path(b.id)) do %>
              <div class="book-blocks">
                <div class="book-image">
                  <%= image_tag(b.image, size:"70x90") %>
                </div>
                <div class="info-box">
                  <div class="book-info">
                    <p>タイトル：<span style="font-size: larger; font-weight: bolder;"><%= b.lead %></span><p>
                    <p>書籍名　：<%= b.title %></p>
                    <p>著者名　：<%= b.author %></p>
                  </div>
                  <div class="book-timestamp">
                    <p><%= l b.created_at %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="chart-container">
      <h2 class="chart-container-header"><%= "#{@user.nickname}のジャンル傾向"%></h2>
      <div class="chart">
        <%= pie_chart(@pie)%>
      </div>
    </div>
  </div>
</main> 